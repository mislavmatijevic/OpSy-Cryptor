<UserControl x:Class="OpSy_Cryptor.usercontrols.ConfirmSignature" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OpSy_Cryptor.usercontrols" mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="150" />
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
            <RowDefinition Height="44.77" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="42" FontFamily="Bahnschrift Light" Grid.Row="1" Foreground="#FFEA6270" VerticalAlignment="Top" Margin="10,20,10,0" Height="50">Potvrda potpisa</TextBlock>
        <TextBlock FontSize="20" FontFamily="Bahnschrift Light" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Foreground="#FFAA2F3C" Margin="20,70,0,0" Height="24" VerticalAlignment="Top">Čitanje i provjera digitalnog potpisa učitane datoteke</TextBlock>

        <Button x:Name="loadSignatureButton" Padding="0 -2 0 0" Grid.Column="1" Grid.Row="2" BorderBrush="Black" Background="#FFAA2F3C" Foreground="White" Content="Učitaj datoteku potpisa" Margin="10,9,10,9" FontSize="18" Click="LoadSignatureButton_Click" MaxWidth="200">
            <Button.Effect>
                <DropShadowEffect />
            </Button.Effect>
        </Button>

        <Label x:Name="messageLabel" Padding="5 10 0 0" Grid.Row="4" FontFamily="Bahnschrift Light" FontSize="18" Foreground="White" Content="Pronađen korisnik Ivo Ivić!" Margin="10,5,0,6" />
    </Grid>

</UserControl>
